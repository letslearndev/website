<script>
import TypeIt from "typeit";
new TypeIt("#typing-placeholder", {
  // strings: ["Frontend Engineer", "Backend Engineer", "Fullstack Engineer", "DevOps Engineer"],
  speed: 50,
  loop: true,
  lifeLike: true,
  cursor: true,
})
.type("Frontend Engineer", { delay: 1000 })
.pause(2000)
.delete()
.type("Backend Engineer", { delay: 1000 })
.pause(2000)
.delete()
.type("Fullstack Engineer", { delay: 1000 })
.pause(2000)
.delete()
.type("DevOps Engineer", { delay: 1000 })
.pause(2000)
.delete()
.go();
</script>

